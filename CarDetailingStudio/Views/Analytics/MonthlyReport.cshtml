
<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card">
            <div class="card-body">
                @using (Html.BeginForm("MonthlyReport", "Analytics", FormMethod.Post))
                {
                    <div class="input-group">
                        <input type="month" name="dateViewUser" class="form-control" />
                        <div class="input-group-append">
                            <input type="submit" name="submit" class="btn btn-outline-secondary" />
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

