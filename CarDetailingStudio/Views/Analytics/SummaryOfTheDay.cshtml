}


<script>
    $('#quantity').keyup(function () {
        var Value = $('#quantity').val();
        var sum = @ViewBag.CashEndDay - parseFloat(Value.replace(',', '.'));
        $('#errmsg').empty();
        $('#errmsg').text(Value);

        $('#FinalDay').empty();
        $('#FinalDay').text(sum);

        $('#amountFinalDay').empty();
        $('#amountFinalDay').text(sum);

         $('#sumOrder').empty();
        $('#sumOrder').val("newval");
    });
</script>