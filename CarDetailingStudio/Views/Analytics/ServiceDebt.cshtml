@model IEnumerable<CarDetailingStudio.Models.ModelViews.OrderServicesCarWashView>


@if (ViewBag.TypeOrder == 3)
{
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <table class="table table-striped">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Id)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.OrderDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ClosingData)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DiscountPrice)
                        </th>

                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.OrderDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ClosingData)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DiscountPrice)
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <table class="table table-striped">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IdClientsOfCarWash)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ClientsOfCarWash.NumberCar)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.ClientsOfCarWash.discont)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.OrderDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ClosingData)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DiscountPrice)
                        </th>
                        <th>

                        </th>
                    </tr>

                    @foreach (var item in Model)
                    {

                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IdClientsOfCarWash)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ClientsOfCarWash.NumberCar)
                            </td>

                            @if (item.ClientsOfCarWash.discont >= 50)
                            {
                                <td>
                                    <span style='color: #CC4444; font-weight: 800'>
                                        @Html.DisplayFor(modelItem => item.ClientsOfCarWash.discont)%
                                    </span>
                                </td>
                            }
                            else if (item.ClientsOfCarWash.discont == null)
                            {
                                <td>
                                    @Html.DisplayFor(modelItem => item.ClientsOfCarWash.discont)
                                </td>
                            }
                            else
                            {
                                <td>
                                    <span style='color: #04cc1b; font-weight: 600'>
                                        @Html.DisplayFor(modelItem => item.ClientsOfCarWash.discont)%
                                    </span>
                                </td>
                            }

                            <td>
                                @Html.DisplayFor(modelItem => item.OrderDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ClosingData)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DiscountPrice)
                            </td>
                            <td>
                                @Html.ActionLink("Просмотреть", "../Order/CompletedOrders", new { idOrder = item.Id }, new { @class = "btn btn-outline-info" })
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
}
