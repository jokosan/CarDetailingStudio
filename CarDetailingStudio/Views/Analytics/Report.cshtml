                                    <tr>
                                        <td colspan="3" class="text-center"><b class="text-danger">Доход по категориям</b></td>
                                    </tr>
                                    <tr>
                                        <td class="text-center">1</td>
                                        <td>Наличный</td>
                                        <td class="text-right"> @ViewBag.Cash грн. </td>
                                    </tr>
                                    <tr>
