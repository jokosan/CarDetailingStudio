@model IEnumerable<CarDetailingStudio.Models.ModelViews.DetailingsView>
<div class="row">
    <div class="col-md-12">
        <div class="text-right">
            @Html.ActionLink("Добавить услугу", "../Demo/Index", null, new { @class = "btn btn-outline-secondary" })
            <hr />
        </div>

        @foreach (var itemGroup in ViewBag.Grup)
        {
            <div class="card">
                <div class="card-header">
                    <div class="card-title">@itemGroup.group</div>
                </div>
                <div class="card-body">

                    <table class="table table-striped mt-3">
                        <thead>
                            <tr>

                                <th>
                                    @Html.DisplayNameFor(model => model.services_list)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.validity)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.note)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.S)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.M)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.L)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.XL)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.currency)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.mark)
                                </th>

                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                if (item.IdGroupWashServices == itemGroup.Id)
                                {
                                    <tr>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.services_list)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.validity)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.note)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.S)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.M)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.L)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.XL)
                                        </td>
                                        <td>
                                            <b> @Html.DisplayFor(modelItem => item.currency)</b>
                                        </td>
                                        <td>
                                            @if (item.mark == true)
                                            {
                                                <div class="text-danger">off</div>
                                            }
                                            else
                                            {
                                                <div class="text-success">On</div>
                                            }
                                        </td>

                                        <td>
                                            @Html.ActionLink("Edit", "EditServises", new { id = item.Id })
                                            @Html.ActionLink("Details", "Details", new { id = item.Id })
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
    </div>
</div>
