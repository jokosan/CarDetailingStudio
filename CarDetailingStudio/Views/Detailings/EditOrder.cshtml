@model IEnumerable<CarDetailingStudio.Models.ModelViews.DetailingsView>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <p>
                @Html.ActionLink("Create New", "Create")
            </p>
            @using (Html.BeginForm())
            {
                <table class="table">
                    <tr>
                        <th></th>
                        <th>
                            @Html.DisplayNameFor(model => model.services_list)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.validity)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.note)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.S)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.M)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.L)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.XL)
                        </th>

                        <th></th>
                    </tr>


                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <label class="customcheckbox">
                                    @*<input type="checkbox" class="listCheckbox" />*@
                                    <input type="checkbox" name="idServices" value="@item.Id" />
                                    <span class="checkmark"></span>
                                </label>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.services_list)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.validity)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.note)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.S)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.M)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.L)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.XL)
                            </td>

                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                            </td>
                        </tr>
                    }


                </table>
                <input class="btn btn-outline-info" type="submit" id="btnCreate" value="Create" />
            }

        </div>
    </div>
</div>