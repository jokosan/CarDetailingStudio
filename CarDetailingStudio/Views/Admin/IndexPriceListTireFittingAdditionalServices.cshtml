@model IEnumerable<CarDetailingStudio.Models.ModelViews.PriceListTireFittingAdditionalServicesView>

<div class="row">
    <div class="col-12">
        <div class="card">

            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h5 class="card-title m-b-0">Прайс дополнительные услуги</h5>
                    </div>
                    <div class="col-md-6 text-right">
                        @Html.ActionLink("Добавить", "AddEmployee", null, new { @class = "btn btn-info" })
                    </div>
                </div>
            </div>
          
            <div class="table-responsive">
                <div class="table-responsive">
                    <div class="card-body">
                        <table class="table">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.JobTitle)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TheCost)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.sorting)
                                </th>
                                <th></th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.JobTitle)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TheCost)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.sorting)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "EditPriceListTireFittingAdditionalServices", new { id = item.idPriceListTireFittingAdditionalServices }) 
                                    </td>
                                </tr>
                            }

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>