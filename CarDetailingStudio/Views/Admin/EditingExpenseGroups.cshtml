<link href="~/Content/input.css" rel="stylesheet" />
<div class="row">
    <div class="col-lg-6">
        <div class="card">

            <div class="card-body">
                <div class="row">
                    <div class="col-lg-6">
                        <h5 class="card-title m-b-0">Родительская категория<br/> расходов</h5>
                    </div>
                    <div class="col-md-6 text-right">
                        @Html.ActionLink("Создать", "ExpenseCategoryCreate", null, new { @class = "btn btn-info" })

                    </div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <div class="table-responsive  scroll">
                    <div class="card-body">
                        <table class="table">

                            <tr>
                                <th>
                                    id
                                </th>
                                <th>
                                    name
                                </th>
                                <th>

                                </th>
                            </tr>

                            @foreach (var item in ViewBag.ExpenseCategory)
                            {
                                <tr>
                                    <td>
                                        @item.idExpenseCategory
                                    </td>
                                    <td>
                                        @item.name
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "ExpenseCategoryEdit", new { idExpenseCategory = item.idExpenseCategory })
                                    </td>
                                </tr>
                            }

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
       

    <div class="col-lg-6">
        <div class="card">

            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h5 class="card-title m-b-0">Дочерняя категория <br/>расходов</h5>
                    </div>
                    <div class="col-md-6 text-right">
                        @Html.ActionLink("Создать", "CostCategoriesCreate", null, new { @class = "btn btn-info" })
                    </div>
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-body">
                <div class="table-responsive scroll">
                    <div class="card-body">
                        <table class="table">

                            <tr>
                                <th>
                                    id
                                </th>
                                <th>
                                    typeOfExpenses
                                </th>
                                <th>
                                    name
                                </th>

                                <th>

                                </th>
                            </tr>

                            @foreach (var item in ViewBag.CostCategories)
                            {
                                <tr>
                                    <td>
                                        @item.typeOfExpenses
                                    </td>
                                    <td>
                                        @item.Name
                                    </td>

                                    <td>
                                        @Html.ActionLink("Edit", "CostCategoriesEdit", new { idCostCategories = item.idCostCategories })
                                    </td>
                                </tr>
                            }

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




