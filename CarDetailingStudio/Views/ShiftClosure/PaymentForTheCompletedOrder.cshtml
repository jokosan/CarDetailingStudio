@model IEnumerable<CarDetailingStudio.Models.ModelViews.OrderCarWashWorkersView>

<link href="~/Content/input.css" rel="stylesheet" />

@using (Html.BeginForm())
{
    <div class="row>">
        <div class="col-12">
            <div class="card">
                <table class="table">
                    <tr>
                        <th>

                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.OrderServicesCarWash.ClosingData)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.OrderServicesCarWash.ClosingData)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.OrderServicesCarWash.DiscountPrice)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Payroll)
                        </th>

                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.OrderServicesCarWash.OrderDate, "{0: tt:mm}")
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OrderServicesCarWash.ClosingData, "{0: tt:mm}")
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OrderServicesCarWash.DiscountPrice)
                            </td>
                            <td id="test">
                                @Html.DisplayFor(modelItem => item.Payroll)
                            </td>
                            <td>
                                @Html.ActionLink("Подробнее о заказе", "OrderDetails", new { id = item.IdOrder })
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-body">

            <div class="pull-right m-t-30 text-right">
                <p>Скидка клиента ...... %</p>
                <p>Общая сумма: .... грн</p>
                <hr>

                <div class="row">
                    <div class="col-md-6">
                        <div>

                            <div class="form-group row">
                                <label for="cono1" class="col-sm-3 text-right control-label col-form-label">
                                    Сумма выплаты:
                                </label>
                                <div class="col-md-8">
                                    <input class="form-control" type="text" vale="sum" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <h3><b>Итого: </b>.....грн.</h3>
                        <input id="total">
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
            <hr>
            <div class="text-right">
                @Html.ActionLink("Отметить", "Index", null, new { @class = "btn btn-danger preview" })

            </div>
        </div>
    </div>
}