@model IEnumerable<CarDetailingStudio.Models.ModelViews.UtilityCostsView>


<div class="row">
    <div class="col-12">
        <div class="card">

            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h5 class="card-title m-b-0">Коммунальные услуги</h5>
                    </div>
                    <div class="col-md-6">
                        <div class="pull-right m-t-30 text-right">
                            @Html.ActionLink("Добавить затраты", "CreateUtilityCosts", null, new { @class = "btn btn-info" })
                        </div>
                    </div>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.indicationCounter)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.amount)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.dateExpenses)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.expenseCategory.name)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.indicationCounter)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.amount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.dateExpenses)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.expenseCategory.name)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "EditUtilityCosts", new { id = item.idUtilityCosts }) |
                                @Html.ActionLink("Details", "Details", new { id = item.idUtilityCosts }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.idUtilityCosts })
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>
