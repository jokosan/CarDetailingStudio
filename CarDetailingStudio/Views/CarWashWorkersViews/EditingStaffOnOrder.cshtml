@model CarDetailingStudio.Models.ModelViews.CarWashWorkersView

@using (Html.BeginForm("ChangeEmployee", "CarWashWorkersViews", new { idOrder = ViewBag.Order, idEmployee = Model.id }))
{


    <div class="row">
        <div class="col-md-6">

            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-12">
                            <h4 class="card-title">Текущий сотрудник</h4>
                        </div>

                    </div>
                </div>
                <div class="card-body">
                    <table class="table">
                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.Name)
                            </td>

                            <td>
                                @Html.DisplayFor(model => model.Name)
                            </td>
                        </tr>

                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.Patronymic)
                            </td>

                            <td>
                                @Html.DisplayFor(model => model.Patronymic)
                            </td>

                        </tr>
                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.MobilePhone)
                            </td>

                            <td>
                                @Html.DisplayFor(model => model.MobilePhone)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.Experience)
                            </td>

                            <td>
                                @Html.DisplayFor(model => model.Experience)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.AdministratorsInterestRate)
                            </td>

                            <td>
                                @Html.DisplayFor(model => model.AdministratorsInterestRate)
                            </td>
                        </tr>
                        <tr>

                            <td>
                                @Html.DisplayNameFor(model => model.InterestRate)
                            </td>

                            <td>
                                @Html.DisplayFor(model => model.InterestRate)
                            </td>
                        </tr>
                        <tr>

                            <td>
                                @Html.DisplayNameFor(model => model.rate)
                            </td>

                            <td>
                                @Html.DisplayFor(model => model.rate)
                            </td>
                        </tr>
                        <tr>

                            <td>
                                @Html.DisplayNameFor(model => model.DataRegistration)
                            </td>

                            <td>
                                @Html.DisplayFor(model => model.DataRegistration)
                            </td>

                        </tr>
                        <tr>

                            <td>
                                @Html.DisplayNameFor(model => model.DataDismissal)
                            </td>

                            <td>
                                @Html.DisplayFor(model => model.DataDismissal)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.status)
                            </td>

                            <td>
                                @Html.DisplayFor(model => model.status)
                            </td>

                        </tr>
                        <tr>

                            <td>
                                @Html.DisplayNameFor(model => model.Photo)
                            </td>

                            <td>
                                @Html.DisplayFor(model => model.Photo)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.IdPosition)
                            </td>

                            <td>
                                @Html.DisplayFor(model => model.JobTitleTable.Position)
                            </td>
                        </tr>

                    </table>
                </div>
            </div>
        </div>
        <div class="col-md-6">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title m-b-0">Выберите сотрудника для замены</h5>

                </div>
                <div class="comment-widgets scrollable">
                    <div class="comment-widgets scrollable" id="groupOne">
                        @foreach (var item in ViewBag.Brigade)
                        {
                            <div class="d-flex flex-row comment-row m-t-0">

                                <div class="checkbox">

                                    <text><input type="checkbox" name="idBrigade" value="@item.id" /></text>
                                </div>

                                <div class="comment-text w-100">
                                    <h6 class="font-medium"> @item.Surname @item.Name </h6>
                                    <span class="m-b-15 d-block">@item.JobTitleTable.Position | Тел. +38 @item.MobilePhone</span>

                                    <div class="m-t-20">
                                        <div class="d-flex no-block align-items-center">
                                            <span>Процент от заказа @item.InterestRate%</span>
                                            <div class="ml-auto">
                                                <span>100%</span>
                                            </div>
                                        </div>
                                        <div class="progress">
                                            <div class="progress-bar progress-bar-striped" role="progressbar" style="width: @item.InterestRate%" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        }
                    </div>
                    <div class="text-right">
                        <input type="submit" value="Изменить" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </div>
    </div>


}


<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.id }) |
    @Html.ActionLink("Back to List", "Index")
</p>


<script>
    $('#groupOne input:checkbox').click(function () {
        if ($(this).is(':checked')) {
            $('#groupOne input:checkbox').not(this).prop('checked', false);
        }
    });


</script>
