@model IEnumerable<CarDetailingStudio.Models.ModelViews.OrderServicesCarWashView>

<div class="row">

    <div class="col-md-12">


        <div class="card">
            <div class="card-body">
                <h5 class="card-title m-b-0 text-center">Customer</h5>
                <h6 class="card-title m-b-0 text-center">@ViewBag.Date</h6>
            </div>



            @using (Html.BeginForm())
            {
                <div class="text-center">
                    <input name="startDate" type="date" />
                    <input name="finalDate" type="date" />

                    <input class="btn btn-danger" type="submit" id="btnCreate" value="Enter" />
                    <hr />
                </div>

            }

        </div>


    </div>
</div>

<div class="row">

    <div class="col-md-12">
        <div class="card">
            <div class="card-body">

                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.IdClientsOfCarWash)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.StatusOrder)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PaymentState)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.OrderDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ClosingData)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TotalCostOfAllServices)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DiscountPrice)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.IdClientsOfCarWash)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StatusOrder)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PaymentState)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OrderDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ClosingData)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TotalCostOfAllServices)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DiscountPrice)
                            </td>
                            <td>
                                @Html.ActionLink("Details", "Details", new { id = item.Id })
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>


