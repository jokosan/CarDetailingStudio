@model IEnumerable<CarDetailingStudio.Models.ModelViews.OrderCarWashWorkersView>

<link href="~/Content/custom.css" rel="stylesheet" />

<div class="row">
    <div class="col-12">
        <div class="card">

            <div class="card-body">
                <div class="row">

                    <div class="col-md-6">
                        <h5 class="card-title m-b-0">
                            @ViewBag.CarWashWorker.Surname @ViewBag.CarWashWorker.Name @ViewBag.CarWashWorker.Patronymic <br /> @ViewBag.MobilePhone
                        </h5>
                    </div>

                    <div class="col-md-6">
                        <div class="text-right">
                            <p>
                                @if (ViewBag.CarWashWorker.AdministratorsInterestRate != 0)
                                {
                                    <span>Процент от оформления заказа:<span class="percent"> @ViewBag.CarWashWorker.AdministratorsInterestRate %</span></span><br />
                                    <span>Процент от заказа: <span class="percent"> @ViewBag.CarWashWorker.InterestRate %</span></span>
                                }
                                else
                                {
                                    <span>Процент от заказа: <span class="percent">@ViewBag.CarWashWorker.InterestRate %</span></span>
                                }

                            </p>
                            <hr/>
                            <h5 class="card-title m-b-0">Сумма выполненных заказов: @ViewBag.Sum грн.</h5>
                            <h5 class="card-title m-b-0">Итого за день: @ViewBag.SumOrder грн.</h5>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.OrderServicesCarWash.Id)
                        </th>
                        <td>
                            @Html.DisplayNameFor(model => model.OrderServicesCarWash.ClientsOfCarWash.NumberCar)
                        </td>
                        <th>
                            @Html.DisplayNameFor(model => model.OrderServicesCarWash.OrderDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.OrderServicesCarWash.ClosingData)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.OrderServicesCarWash.TotalCostOfAllServices)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.OrderServicesCarWash.DiscountPrice)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Payroll)
                        </th>

                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                <tr>
                    <td>
                        № @Html.DisplayFor(modelItem => item.OrderServicesCarWash.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrderServicesCarWash.ClientsOfCarWash.NumberCar)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrderServicesCarWash.OrderDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrderServicesCarWash.ClosingData)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrderServicesCarWash.TotalCostOfAllServices) грн.
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrderServicesCarWash.DiscountPrice) грн.
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Payroll) грн.
                    </td>

                </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>
