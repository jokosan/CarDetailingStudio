                                @Html.EditorFor(model => model.AdministratorsInterestRate, new { htmlAttributes = new { @class = "form-control", @type = "number", value = @Request.Form["InterestRate"] } })
                                @Html.ValidationMessageFor(model => model.AdministratorsInterestRate, "", new { @class = "text-danger" })
