@model IEnumerable<CarDetailingStudio.Models.ModelViews.OrderServicesCarWashView>

<link href="~/Content/input.css" rel="stylesheet" />

<div class="container-fluid">

    <div class="row">

        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title m-b-0">Income details</h5>
                </div>
                <div class="table-responsive">
                    <table class="table">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.IdClientsOfCarWash)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.OrderDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ClosingData)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DiscountPrice)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TotalCostOfAllServices)
                            </th>

                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Id)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.OrderDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ClosingData)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DiscountPrice)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TotalCostOfAllServices)
                                </td>

                                @*<td>
                                        @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-light btn-sm" })
                                    </td>*@
                            </tr>
                        }

                    </table>
                </div>
            </div>

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title m-b-0"></h5>

                    <div class="pull-right m-t-30 text-right">
                        <h3>Итого к выплате ЗП: @ViewBag.Sum грн.</h3>
                    </div>

                    <div class="clearfix"></div>
                    <hr>
                    <div class="text-right">
                        @using (Html.BeginForm())
                        {
                            <label class="myLabel">Выплатить зарплату сотрудникам</label>
                            <label class="customcheckbox">
                                <label class="label">
                                    <input class="label__checkbox" type="checkbox" name="confirmation" value="true" id="checkme" onchange="document.getElementById('submit').disabled = !this.checked;" />
                                    <span class="label__text">
                                        <span class="label__check">
                                            <i class="fa fa-check icon"></i>
                                        </span>
                                    </span>
                                </label>
                                <span class="checkmark"></span>
                            </label>

                            <input type="submit" value="CloseOrder" disabled="disabled" class="btn btn-success preview" id="submit" />
                            @Html.ActionLink("Cansel", "../ItogOrder/Salary", null, new { @class = "btn btn-danger preview" })
                        }

                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
